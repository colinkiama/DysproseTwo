<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Thickness x:Key="DysprosePagePadding">32,32,32,32</Thickness>
    <Thickness x:Key="DysproseDesktopPagePadding">40,40,40,40</Thickness>
    <Style x:Key="DysproseRootGridStyle" TargetType="Grid">
        <Setter Property="Padding" Value="{StaticResource DysprosePagePadding}"/>
    </Style>

    <Style x:Key="DysproseDesktopRootGridStyle" TargetType="Grid">
        <Setter Property="Padding" Value="{StaticResource DysproseDesktopPagePadding}"/>
    </Style>
</ResourceDictionary>
